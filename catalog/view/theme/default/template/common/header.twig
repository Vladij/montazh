<!-- Modal frames -->
<div id="services_modal">
  <div id="left_panel">
    {% for key, category in categories %}
      <div id="block" block-id="block{{ key }}" {% if key == 0 %} class="active" {% else %} class {% endif %}>
        <p>{{ category.name }}</p>
        {% if category.subcategories %}
          <svg width="8" height="12" viewBox="0 0 8 12" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M1.66663 1.33329L6.33329 5.99996L1.66663 10.6666" stroke="#CCD8E8" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        {% endif %}
      </div>
    {% endfor %}

  </div>
  <div id="right_panel">
    {% for key, category in categories %}
      {% if category.subcategories %}

        <div id="block{{ key }}" {% if key == 0 %} class="bigblock showed" status="showed" {% else %} class="bigblock hidden" status="hidden"{% endif %}>
          <h1><a href="{{ category.href }}">{{ category.name }}</a></h1>
          <table>

            <tr class="name">
              {% for keysub, subcategory in category.subcategories %}
                <td class="name"><a href="{{ subcategory.href }}">{{ subcategory.name }}</a></td>
              {% endfor %}
            </tr>
            <tr id="parse"></tr>
            {% for keysub, subcategory in category.subcategories %}
              {% if subcategory.thirdcategories %}
                <tr>
                  {% for thirdcategory in subcategory.thirdcategories %}
                    <td><a href="{{ thirdcategory.href }}">{{ thirdcategory.name }}</a></td>
                  {% endfor %}
                </tr>
              {% endif %}
            {% endfor %}

          </table>
        </div>

      {% endif %}
    {% endfor %}

  </div>
</div>
<script>
  $(document).ready(function(){
    $('body #services_modal #left_panel #block').on('click', function(){
      var blocksButtons = $('body #services_modal #left_panel').find('.active');
      blocksButtons.removeClass('active');
      $(this).addClass('active');
      var blockId = $(this).attr('block-id');
      var bigblock = $(this).closest('#services_modal').find('#right_panel #' + blockId);
      var bigblocksecond = $(this).closest('#services_modal').find('#right_panel .showed');

      bigblocksecond.removeClass('showed');
      bigblocksecond.addClass('hidden');
      bigblock.addClass('showed');
    });
  });
</script>
